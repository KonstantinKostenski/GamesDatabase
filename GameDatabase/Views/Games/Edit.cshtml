@model GameDatabase.Models.EditGameModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit game</h2>

<h4>Game</h4>
<hr />
<div class="container-fluid">
    <form class="form-horizontal" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-lg-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="CoverArtUrl" class="control-label"></label>
                <input asp-for="CoverArtUrl" class="form-control" />
                <span asp-validation-for="CoverArtUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label asp-for="Platform" class="control-label">Select Platform</label>
                <select asp-for="Platform">
                    <option value="Playstation">Playstation</option>
                    <option value="Xbox">Xbox</option>
                    <option value="Nintendo">Nintendo</option>
                    <option value="PC">PC</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label asp-for="GenreId" class="control-label">Select Genre</label>
                <select asp-for="GenreId">
                    @foreach (var item in Model.Genres)
                    {
                        <option value="@item.Value">@item.Text</option>//if the value is same as text
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
